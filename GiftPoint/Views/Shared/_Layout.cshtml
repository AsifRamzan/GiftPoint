<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - GP</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- #CSS Links -->
    <!-- Basic Styles -->
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/css/font-awesome.min.css">

    <!-- SmartAdmin Styles : Caution! DO NOT change the order -->
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/css/smartadmin-production-plugins.min.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/css/smartadmin-production.min.css">
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/css/smartadmin-skins.min.css">

    <!-- SmartAdmin RTL Support -->
    <link rel="stylesheet" type="text/css" media="screen" href="~/Content/css/smartadmin-rtl.min.css">
    <link href="~/Content/css/your_style.css" rel="stylesheet" />

    <!-- #FAVICONS -->
    <link rel="shortcut icon" href="~/Content/img/PepsiLogo.png" type="image/x-icon">
    <link rel="icon" href="~/Content/img/PepsiLogo.png" type="image/x-icon">

    <style>
        #extr-page-header-space {
            line-height: 48px !important;
        }

        html {
            background-image: url('../../Content/img/PespsiCover.jpg');
            background-size: cover;
        }

        body {
            background: none;
        }
    </style>        

    <script src="~/Content/js/libs/jquery-2.1.1.min.js"></script>
    

</head>
<body class="animated fadeInDown" style="min-height: 100%;margin-bottom: -50px;">

    <header id="header">
        <div id="logo-group">
            <span id="logo">
                <img src="~/Content/img/PepsiLogo.png" alt="Sales Operations" style="float:left">
                <span class="siteName">Gift Point - Estore</span>
            </span>
        </div>

        <span class="hidden" id="extr-page-header-space"> <span class="hidden-mobile hiddex-xs">Need an account?</span> <a href="#" class="btn btn-danger">Create account</a> </span>

    </header>

    <div id="main" role="main" style="margin-left:0px;">

        <!-- MAIN CONTENT -->
        <div id="content" class="container">

            @RenderBody()

        </div>

    </div>    
    
    <script src="~/Content/js/libs/jquery-ui-1.10.3.min.js"></script>

    <!-- JQUERY MASKED INPUT -->
    <script src="js/plugin/masked-input/jquery.maskedinput.min.js"></script>

    <script src="~/Content/js/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/js/plugin/bootbox/bootbox.min.js"></script>

    <!-- IMPORTANT: APP CONFIG -->
    <script src="~/Content/js/app.config.js"></script>

    <!-- JQUERY VALIDATE -->
    <script src="~/Content/js/plugin/jquery-validate/jquery.validate.min.js"></script>

</body>
</html>
